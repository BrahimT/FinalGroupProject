<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progressBar_Main"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_below="@+id/progressBar_Main"
        android:id="@+id/textViewCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter city name:"
        android:layout_alignParentStart="true"/>
    <!--        android:layout_above="@+id/editViewCity"/>-->

    <EditText
        android:id="@+id/editViewCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCity"
        android:layout_alignParentStart="true"/>
    <!--        android:layout_above="@id/textViewRadius"/>-->

    <TextView
        android:id="@+id/textViewRadius"
        android:text="Enter radius: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/editViewCity"/>
    <!--        android:layout_above="@+id/editViewRadius"/>-->

    <EditText
        android:id="@+id/editViewRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewRadius"/>
    <!--        android:layout_above="@+id/searchButton" />-->

    <Button
        android:id="@+id/searchButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editViewRadius"/>
    <!--        android:layout_toStartOf="@+id/favouriteButton"/>-->

    <Button
        android:id="@+id/favouriteButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="My favourite"
        android:layout_below="@+id/editViewRadius"
        android:layout_alignParentEnd="true"/>
    <!--        android:layout_toEndOf="@+id/searchButton"-->

    <ListView
        android:id="@+id/listViewMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchButton"/>

</RelativeLayout>